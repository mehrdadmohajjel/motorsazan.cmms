{

    settings.Name = "addedRegisterConsumableGrid";
    settings.CallbackRouteValues = new { Controller = "StockMan", Action = "HavaleWorkOrderReferralGrid" };

    settings.Width = Unit.Percentage(100);
    settings.SettingsBehavior.AllowFocusedRow = true;
