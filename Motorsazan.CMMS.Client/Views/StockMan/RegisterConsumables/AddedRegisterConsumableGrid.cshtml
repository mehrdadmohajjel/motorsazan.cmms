    {
        column.VisibleIndex = 1;
        column.FieldName = "WorkOrderSerial";
        column.Caption = "شماره سفارشکار";
    });
    settings.Columns.Add(column =>
    {
        column.VisibleIndex = 2;
        column.FieldName = "HavaleNO";
