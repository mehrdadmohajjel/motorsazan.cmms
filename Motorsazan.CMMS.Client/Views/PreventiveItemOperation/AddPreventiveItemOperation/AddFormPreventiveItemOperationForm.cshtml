<div id="addFormDesign">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            انتخاب امور
                        </label>
                        <div id="addFormDepartmentComboParent">
                            @{ Html.RenderAction("AddMachineOperationDepartmentList", "PreventiveItemOperation"); }
                        </div>
                        <div class="app__form-error app__hide" id="addFormDepartmentComboError">
                            امور انتخاب نشده است
                        </div>

                    </div>
                </div>
                <div class="col-xs-12 col-md-12">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            انتخاب خط
                        </label>
                        <div id="addFormSubDepartmentComboParent">
                            @{ Html.RenderPartial("~/Views/PreventiveItemOperation/AddPreventiveItemOperation/AddMachineOperationSubDepartmentList.cshtml"); }
                        </div>
                        <div class="app__form-error app__hide" id="addFormSubDepartmentComboError">
                            خط انتخاب نشده است
                        </div>

                    </div>
                </div>

                <div class="col-xs-12 col-md-12">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            انتخاب دستگاه
                        </label>
                        <div id="addFormSubMachinePreventiveItemOperationTreeParent">
                        </div>
                        <div class="app__form-error app__hide"
                             id="addFormSubMachinePreventiveItemOperationTreeError">
                            دستگاه انتخاب نشده است
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-xs-12 col-md-6">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            عنوان آیتم پیشگیرانه
                        </label>
                        <div id="addPreventiveItemOperationTitleParent">
                            @Html.DevExpress().Memo(settings =>
                            {
                                settings.Name = "addPreventiveItemOperationTitle";
                                settings.Properties.NullText = "عنوان آیتم پیشگیرانه";
                                settings.Properties.ClientSideEvents.ValueChanged =
                                    "motorsazanClient.preventiveItemOperation.handleAddPreventiveItemOperationTitleValueChanged";
                            }).GetHtml()

                        </div>
                        <div class="app__form-error app__hide" id="addPreventiveItemOperationTitleError">
                            عنوان آیتم پیشگیرانه وارد نشده است
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-md-12" id="addFormPreventiveItemOperationTypeDesign">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            انتخاب نوع آیتم پیشگیرانه
                        </label>
                        <div id="addFormPreventiveItemOperationTypeParent">
                            @{ Html.RenderAction("AddFormPreventiveItemOperationTypeList", "PreventiveItemOperation"); }
                        </div>
                        <div class="app__form-error app__hide" id="addFormPreventiveItemOperationTypeError">
                            نوع آیتم پیشگیرانه انتخاب نشده است
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-md-12 col-lg-12 app__hide" id="addFormPreventiveItemOperationTypePLCDetailDesign">
                    <div class="col-xs-12 col-md-6">
                        <div class="app__form-item">
                            <label class="app__form-label">
                                دوره به ساعت
                            </label>
                            <div id="addFormPeriodInHourSpinParent">
                                @Html.DevExpress().SpinEdit(settings =>
                                {
                                    settings.Name = "addFormPeriodInHourSpin";
                                    settings.Properties.NullText = "دوره به ساعت";
                                    settings.Properties.MinValue = 0;
                                    settings.Properties.MaxValue = 9999999999999999999;
                                    settings.Properties.ShowOutOfRangeWarning = false;
                                    settings.Properties.ClientSideEvents.NumberChanged =
                                        "motorsazanClient.preventiveItemOperation.handleAddFormPeriodInHourSpinNumberChanged";
                                }).GetHtml()

                            </div>
                            <div class="app__form-error app__hide" id="addFormPeriodInHourSpinError">
                                دوره به ساعت وارد نشده است
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6">
                        <div class="app__form-item">
                            <label class="app__form-label">
                                مدت اجرا(دقیقه)
                            </label>
                            <div id="addFormJobTimeInMinuteSpinParent">
                                @Html.DevExpress().SpinEdit(settings =>
                                {
                                    settings.Name = "addFormJobTimeInMinuteSpin";
                                    settings.Properties.NullText = "مدت اجرا";
                                    settings.Properties.MinValue = 0;
                                    settings.Properties.MaxValue = 9999999999999999999;
                                    settings.Properties.ShowOutOfRangeWarning = false;
                                    settings.Properties.ClientSideEvents.NumberChanged =
                                        "motorsazanClient.preventiveItemOperation.handleAddFormJobTimeInMinuteSpinNumberChanged";
                                }).GetHtml()

                            </div>
                            <div class="app__form-error app__hide" id="addFormJobTimeInMinuteSpinError">
                                مدت اجرا وارد نشده است
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-md-12 col-lg-12 app__hide" id="addFormPreventiveItemOperationTypeWeeklyDetailDesign">
                    <div class="col-xs-12 col-md-6">
                        <div class="app__form-item">
                            <label class="app__form-label">
                                هفته مبنا
                            </label>
                            <div id="addFormPreventiveItemOperationSourceWeekTextBoxParent">
                                @Html.DevExpress().SpinEdit(settings =>
                                {
                                    settings.Name = "addFormPreventiveItemOperationSourceWeekTextBox";
                                    settings.Properties.NullText = "هفته مبنا";
                                    settings.Properties.MinValue = 0;
                                    settings.Properties.MaxValue = 9999999999999999999;
                                    settings.Properties.ShowOutOfRangeWarning = false;
                                    settings.Properties.ClientSideEvents.ValueChanged =
                                        "motorsazanClient.preventiveItemOperation.handleAddFormPreventiveItemOperationSourceWeekTextBoxValueChanged";
                                }).GetHtml()

                            </div>
                            <div class="app__form-error app__hide" id="addFormPreventiveItemOperationSourceWeekTextBoxError">
                                هفته مبنا وارد نشده است
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-xs-12 col-md-6">
                        <div class="app__form-item">
                            <label class="app__form-label">
                                بازه تکرار
                            </label>
                            <div id="addFormPreventiveItemOperationPeriodInWeekTextBoxParent">
                                @Html.DevExpress().SpinEdit(settings =>
                                {
                                    settings.Name = "addFormPreventiveItemOperationPeriodInWeekTextBox";
                                    settings.Properties.NullText = "بازه تکرار";
                                    settings.Properties.MinValue = 0;
                                    settings.Properties.MaxValue = 9999999999999999999;
                                    settings.Properties.ShowOutOfRangeWarning = false;
                                    settings.Properties.ClientSideEvents.ValueChanged =
                                        "motorsazanClient.preventiveItemOperation.handleAddFormPreventiveItemOperationPeriodInWeekTextBoxValueChanged";
                                }).GetHtml()
                            </div>
                            <div id="addFormPreventiveItemOperationPeriodInWeekTextBoxError"
                                 class="app__form-error app__hide">
                                بازه تکرار وارد نشده است
                            </div>
                        </div>
                    </div>

                    
                </div>

                <div id="addFormCheckListCodeDesign" class="col-xs-12 col-md-12 col-lg-12">
                    <div class="col-xs-12 col-md-12 col-lg-6">
                        <div class="app__form-item">
                            <label class="app__form-label">
                                انتخاب گروه تعمیراتی
                            </label>
                            <div id="addFormMaintenanceGroupListComboParent">
                                @{ Html.RenderAction("GetMaintenanceGroupList", "PreventiveItemOperation"); }
                            </div>
                            <div class="app__form-error app__hide"
                                 id="addFormMaintenanceGroupListComboError">
                                گروه تعمیراتی انتخاب نشده است
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-12 col-lg-6">
                        <div class="app__form-item">
                            <label class="app__form-label">
                                کد زیر دستگاه (لطفا عدد دو رقمی وارد کنید)
                            </label>
                            <div id="addFormSubMachineCodeParent">
                                @Html.DevExpress().TextBox(settings =>
                                {
                                    settings.Name = "addFormSubMachineCode";
                                    settings.Width = Unit.Percentage(100);

                                    settings.Properties.MaskSettings.Mask = "00";
                                    settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
                                    settings.Properties.ValidationSettings.ErrorText = "کد آیتم پیشگیرانه وارد نشده است";
                                    settings.Properties.ValidationSettings.ErrorTextPosition = ErrorTextPosition.Bottom;
                                    settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithText;

                                    settings.Properties.ClientSideEvents.ValueChanged =
                                        "motorsazanClient.preventiveItemOperation.handleAddFormSubMachineCodeValueChanged";
                                }).GetHtml()
                            </div>
                            <div class="app__form-error app__hide"
                                 id="addFormSubMachineCodeError">
                                کد زیر دستگاه انتخاب نشده است
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-12 col-lg-12" id="addFormLabelDesign">
                        <label class="app__form-label">
                            پیش نمایش کد آیتم پیشگیرانه
                        </label>
                        <div class="col-xs-3 col-md-3 col-lg-3 labelDesign" id="addFormSerialForOperationLabelParent">

                        </div>

                        <div class="col-xs-3 col-md-3 col-lg-3 labelDesign" id="addFormSubMachineCodeLabelParent">
                            @Html.DevExpress().Label(settings =>
                            {
                                settings.Name = "addFormSubMachineCodeLabel";
                                settings.Text = " ";
                                settings.Width = Unit.Percentage(100);
                                settings.Properties.EnableClientSideAPI = true;
                                settings.ControlStyle.CssClass = "CustomLabel";
                            }).GetHtml()
                        </div>

                        <div class="col-xs-3 col-md-3 col-lg-3 labelDesign" id="addFormMaintenanceGroupCodeLabelParent">
                            @Html.DevExpress().Label(settings =>
                            {
                                settings.Name = "addFormMaintenanceGroupCodeLabel";
                                settings.Text = " ";
                                settings.Width = Unit.Percentage(100);
                                settings.Properties.EnableClientSideAPI = true;
                                settings.ControlStyle.CssClass = "CustomLabel";
                            }).GetHtml()
                        </div>

                        <div class="col-xs-3 col-md-3 col-lg-3 labelDesign" id="addFormOperationTypeItemIdLabelParent">
                            @Html.DevExpress().Label(settings =>
                            {
                                settings.Name = "addFormOperationTypeItemIdLabel";
                                settings.Text = "1";
                                settings.Width = Unit.Percentage(100);
                                settings.Properties.EnableClientSideAPI = true;
                                settings.ControlStyle.CssClass = "CustomLabel";
                            }).GetHtml()
                        </div>

                    </div>

                </div>

                <div class="col-xs-12 col-md-12">
                    <div class="col-xs-12 col-md-12  filter-form__action-wrapper">
                        @Html.DevExpress().Button(settings =>
                        {
                            settings.Name = "addFormSubmitBtn";
                            settings.Text = "ثبت آیتم پیشگیرانه";
                            settings.UseSubmitBehavior = false;
                            settings.EnableClientSideAPI = true;
                            settings.Styles.CssPostfix = "filter-form__btn";
                            settings.Width = Unit.Percentage(100);
                            settings.ClientSideEvents.Click =
                                "motorsazanClient.preventiveItemOperation.addPreventiveItemOperation";
                        }).GetHtml()
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>