@model Motorsazan.CMMS.Shared.Models.Output.PreventiveItemOperation.OutputGetMiterMeasuringTypeListForPreventiveOperationItem[]

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "addFormPreventiveItemOperationTypeCombo";
        settings.CallbackRouteValues = new { Controller = "PreventiveItemOperation", Action = "AddFormPreventiveItemOperationTypeList" };
        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "نوع آیتم پیشگیرانه را انتخاب نمایید";
