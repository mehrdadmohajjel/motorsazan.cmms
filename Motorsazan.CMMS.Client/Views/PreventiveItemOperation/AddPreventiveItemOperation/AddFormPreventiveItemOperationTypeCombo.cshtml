        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";

        settings.Properties.ValueField = "MiterMeasuringTypeId";
        settings.Properties.ValueType = typeof(long);
        settings.Properties.Columns.Add("MiterMeasuringTypeShowName", "عنوان");
        settings.Properties.ClientSideEvents.SelectedIndexChanged =
            "motorsazanClient.preventiveItemOperation.handleAddFormPreventiveItemOperationTypeComboSelectedIndexChange";

    }).BindList(Model).GetHtml()



