
@{
    var operationItemId = ViewBag.OperationItemId;
    var machineId = ViewBag.MachineId;
}

<section class="app__section">
    <div class="filter-form">
        <div class="row">
            <div class="col-xs-12 col-md-7 col-lg-7" id="addSparePartCheckComboBoxDesign">
                <div class="app__form-item">
                    <label class="app__form-label">
                        انتخاب قطعات یدکی
                    </label>
                    <div id="addSparePartCheckComboParent">
                        @{
                            Html.RenderAction("AddSparePartToItemCheckComboBox", "PreventiveItemOperation", new { MachineId = machineId });

                        }
                    </div>
                    <div class="app__form-error app__hide" id="addSparePartCheckComboError">
                        قطعات یدکی انتخاب نشده است
                    </div>

                </div>
            </div>

            <div class="col-xs-12 col-sm-4 col-md-3 pull-left">
                <div class="app__form-item app__form-item--action">
                    @Html.DevExpress().Button(settings =>
               {
                   settings.Name = "addSparePartBtn";
                   settings.Text = "افزودن";
                   settings.UseSubmitBehavior = false;
                   settings.EnableClientSideAPI = true;
                   settings.Styles.CssPostfix = "add-form__btn";
                   settings.Width = Unit.Percentage(100);
                   settings.ClientSideEvents.Click =
                       "motorsazanClient.preventiveItemOperation.addSparePartToOperationItemClick";
               }).GetHtml()
                </div>
            </div>

        </div>
    </div>
    <form id="addSparePartToOperationItemGridParent" class="app__grid-wrapper">
        @{ Html.RenderAction("GetSparePartToOperationItemGrid", "PreventiveItemOperation", new { OperationItemId = operationItemId }); }
    </form>
    <div class="app__section">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th colspan="12" style="text-align: center">راهنمای رنگ ها</th>
            </tr>
            </thead>
            <tbody>
            <tr style="text-align: center">
                <td class="col-md-4 col-sm-4" style="background-color: red;color:black">قطعه با موجودی صفر</td>
                <td class="col-md-4 col-sm-4" style="background-color: Orange; color: black ">قطعه دارای درخواست خرید</td>
                <td class="col-md-4 col-sm-4" style="background-color: Yellow; color: black">موجودی صفر و درخواست خرید دار</td>

            </tr>

            </tbody>
        </table>
    </div>

</section>


