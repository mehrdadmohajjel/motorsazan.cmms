<div id="addFormDesign">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            انتخاب امور
                        </label>
                        <div id="addFormDepartmentComboParent">
                            @{ Html.RenderAction("AddMachineOperationDepartmentList", "OperationItem"); }
                        </div>
                        <div class="app__form-error app__hide" id="addFormDepartmentComboError">
                            امور انتخاب نشده است
                        </div>

                    </div>
                </div>
                <div class="col-xs-12 col-md-12">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            انتخاب خط
                        </label>
                        <div id="addFormSubDepartmentComboParent">
                            @{ Html.RenderPartial("~/Views/OperationItem/AddOperationItem/AddMachineOperationSubDepartmentList.cshtml"); }
                        </div>
                        <div class="app__form-error app__hide" id="addFormSubDepartmentComboError">
                            خط انتخاب نشده است
                        </div>

                    </div>
                </div>

                <div class="col-xs-12 col-md-12">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            انتخاب دستگاه
                        </label>
                        <div id="addFormSubMachineOperationItemTreeParent">
                        </div>
                        <div class="app__form-error app__hide"
                             id="addFormSubMachineOperationItemTreeError">
                            دستگاه انتخاب نشده است
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-xs-12 col-md-6">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            عنوان آیتم عملیاتی
                        </label>
                        <div id="addOperationItemTitleParent">
                            @Html.DevExpress().Memo(settings =>
                            {
                                settings.Name = "addOperationItemTitle";
                                settings.Properties.NullText = "عنوان آیتم عملیاتی";
                                settings.Properties.ClientSideEvents.ValueChanged =
                                    "motorsazanClient.operationItem.handleAddOperationItemTitleValueChanged";
                            }).GetHtml()

                        </div>
                        <div class="app__form-error app__hide" id="addOperationItemTitleError">
                            عنوان آیتم عملیاتی وارد نشده است
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-md-12 col-lg-12">
                    <div class="col-xs-12 col-md-12 col-lg-6">
                        <div class="app__form-item">
                            <label class="app__form-label">
                                انتخاب گروه تعمیراتی
                            </label>
                            <div id="addFormMaintenanceGroupListComboParent">
                                @{ Html.RenderAction("GetMaintenanceGroupList", "OperationItem"); }
                            </div>
                            <div class="app__form-error app__hide"
                                 id="addFormMaintenanceGroupListComboError">
                                گروه تعمیراتی انتخاب نشده است
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-12 col-lg-6">
                        <div class="app__form-item">
                            <label class="app__form-label">
                                کد زیر دستگاه (لطفا عدد دو رقمی وارد کنید)
                            </label>
                            <div id="addFormSubMachineCodeParent">
                                @Html.DevExpress().TextBox(settings =>
                                {
                                    settings.Name = "addFormSubMachineCode";
                                    settings.Width = Unit.Percentage(100);

                                    settings.Properties.MaskSettings.Mask = "00";
                                    settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
                                    settings.Properties.ValidationSettings.ErrorText = " کد آیتم های عملیاتی به درستی وارد نشده است";
                                    settings.Properties.ValidationSettings.ErrorTextPosition = ErrorTextPosition.Bottom;
                                    settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithText;

                                    settings.Properties.ClientSideEvents.ValueChanged =
                                        "motorsazanClient.operationItem.handleAddFormSubMachineCodeValueChanged";
                                }).GetHtml()
                            </div>
                            <div class="app__form-error app__hide"
                                 id="addFormSubMachineCodeError">
                                کد زیر دستگاه انتخاب نشده است
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-12 col-lg-12" id="addFormLabelDesign">
                        <label class="app__form-label">
                            پیش نمایش کد آیتم عملیاتی
                        </label>
                        <div class="col-xs-3 col-md-3 col-lg-3 labelDesign" id="addFormSerialForOperationLabelParent">

                        </div>

                        <div class="col-xs-3 col-md-3 col-lg-3 labelDesign" id="addFormSubMachineCodeLabelParent">
                            @Html.DevExpress().Label(settings =>
                            {
                                settings.Name = "addFormSubMachineCodeLabel";
                                settings.Text = " ";
                                settings.Width = Unit.Percentage(100);
                                settings.Properties.EnableClientSideAPI = true;
                                settings.ControlStyle.CssClass = "CustomLabel";
                            }).GetHtml()
                        </div>

                        <div class="col-xs-3 col-md-3 col-lg-3 labelDesign" id="addFormMaintenanceGroupCodeLabelParent">
                            @Html.DevExpress().Label(settings =>
                            {
                                settings.Name = "addFormMaintenanceGroupCodeLabel";
                                settings.Text = " ";
                                settings.Width = Unit.Percentage(100);
                                settings.Properties.EnableClientSideAPI = true;
                                settings.ControlStyle.CssClass = "CustomLabel";
                            }).GetHtml()
                        </div>

                        <div class="col-xs-3 col-md-3 col-lg-3 labelDesign" id="addFormOperationTypeItemIdLabelParent">
                            @Html.DevExpress().Label(settings =>
                            {
                                settings.Name = "addFormOperationTypeItemIdLabel";
                                settings.Text = "2";
                                settings.Width = Unit.Percentage(100);
                                settings.Properties.EnableClientSideAPI = true;
                                settings.ControlStyle.CssClass = "CustomLabel";
                            }).GetHtml()
                        </div>

                    </div>

                </div>

                <div class="col-xs-12 col-md-12">
                    <div class="col-xs-12 col-md-12  filter-form__action-wrapper">
                        @Html.DevExpress().Button(settings =>
                        {
                            settings.Name = "addFormSubmitBtn";
                            settings.Text = "ثبت آیتم عملیاتی";
                            settings.UseSubmitBehavior = false;
                            settings.EnableClientSideAPI = true;
                            settings.Styles.CssPostfix = "filter-form__btn";
                            settings.Width = Unit.Percentage(100);
                            settings.ClientSideEvents.Click =
                                "motorsazanClient.operationItem.addOperationItem";
                        }).GetHtml()
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>