@{
    var operationItemId = ViewBag.OperationItemId;
    var machineId = ViewBag.MachineId;
}

<section class="app__section">
    <div class="filter-form">
        <div class="row">
            <div class="col-xs-12 col-md-7 col-lg-7" id="addPreventiveOperationItemListByMachineIdCheckComboBoxDesign">
                <div class="app__form-item">
                    <label class="app__form-label">
                        انتخاب آیتم پیشگیرانه
                    </label>
                    <div id="addPreventiveOperationItemListByMachineIdCheckComboBoxParent">
                        @{
                            Html.RenderAction("AddPreventiveOperationItemListByMachineIdCheckComboBox", "OperationItem", new { MachineId = machineId });
                        }
                    </div>
                    <div class="app__form-error app__hide" id="addPreventiveOperationItemListByMachineIdCheckComboBoxError">
                        آیتم پیشگیرانه انتخاب نشده است
                    </div>

                </div>
            </div>

            <div class="col-xs-12 col-sm-4 col-md-3 pull-left">
                <div class="app__form-item app__form-item--action">
                    @Html.DevExpress().Button(settings =>
               {
                   settings.Name = "addOperationItemMappingToPMItemBtn";
                   settings.Text = "افزودن";
                   settings.UseSubmitBehavior = false;
                   settings.EnableClientSideAPI = true;
                   settings.Styles.CssPostfix = "add-form__btn";
                   settings.Width = Unit.Percentage(100);
                   settings.ClientSideEvents.Click =
                       "motorsazanClient.operationItem.addOperationItemMappingToPMItemBtnClick";
               }).GetHtml()
                </div>
            </div>

        </div>
    </div>
    <form id="mappingToPreventiveOperationItemGridParent" class="app__grid-wrapper">
        @{ Html.RenderAction("MappingToPreventiveOperationItemGrid", "OperationItem", new { OperationItemId = operationItemId }); }
    </form>
</section>


