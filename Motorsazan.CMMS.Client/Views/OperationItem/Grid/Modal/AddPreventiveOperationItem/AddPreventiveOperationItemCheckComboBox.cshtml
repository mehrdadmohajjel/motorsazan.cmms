@model Motorsazan.CMMS.Shared.Models.Output.OperationItem.OutputGetPreventiveOperationItemListByMachineId[]

@Html.DevExpress().DropDownEdit(settings =>
{
    settings.Name = "checkComboBox";
    settings.SetDropDownWindowTemplateContent(c =>
    {
        Html.DevExpress().ListBox(listBoxSettings =>
        {
            listBoxSettings.Name = "addPreventiveOperationItemListByMachineIdCheckComboBox";
            listBoxSettings.CallbackRouteValues = new { Controller = "OperationItem", Action = "AddPreventiveOperationItemListByMachineIdCheckComboBox" };
            listBoxSettings.ControlStyle.Border.BorderWidth = 0;
            listBoxSettings.ControlStyle.BorderBottom.BorderWidth = 1;
            listBoxSettings.Height = Unit.Pixel(200);
            listBoxSettings.Width = Unit.Percentage(100);

            listBoxSettings.Properties.EnableSelectAll = true;
            listBoxSettings.Properties.SelectAllText = "انتخاب همه موارد";
            listBoxSettings.Properties.FilteringSettings.ShowSearchUI = true;
            listBoxSettings.Properties.SelectionMode = ListEditSelectionMode.CheckColumn;

            listBoxSettings.Properties.FilteringSettings.EditorNullText = "جستجوی پرسنل";

            listBoxSettings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";

            listBoxSettings.Properties.ValueField = "OperationItemId";
            listBoxSettings.Properties.ValueType = typeof(long);


            listBoxSettings.Properties.Columns.Add("OperationItemName", "آیتم پیشگیرانه").Width = Unit.Percentage(55);
            listBoxSettings.Properties.Columns.Add("OperationItemCode", "کد آیتم").Width = Unit.Percentage(25);
            listBoxSettings.Properties.Columns.Add("MaintenanceGroupName", "گروه تعمیراتی").Width = Unit.Percentage(30);

            listBoxSettings.Properties.ClientSideEvents.SelectedIndexChanged =
                "motorsazanClient.operationItem.handleAddPreventiveOperationItemListByMachineIdCheckComboBoxSelectedIndexChange";
        }).BindList(Model).GetHtml();
    });
    settings.Properties.AnimationType = AnimationType.None;
}).GetHtml()
