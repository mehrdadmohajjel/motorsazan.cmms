@model Motorsazan.CMMS.Shared.Models.Output.ProductiveWorkOrder.OutputGetWorkOrderStatusTypeList[]

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "filterFormStatusCombo";
        settings.CallbackRouteValues = new { Controller = "NetExpert", Action = "FilterFormStatusCombo" };
        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "وضعیت را انتخاب کنید";

        settings.SelectedIndex = 50;
        
        settings.Properties.CallbackPageSize = 100;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.IncrementalFilteringDelay = 200;
        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";

        settings.Properties.ValueField = "WorkOrderStatusTypeId";
        settings.Properties.ValueType = typeof(long);

        settings.Properties.TextField = "TypeName";

        settings.Properties.ClientSideEvents.SelectedIndexChanged =
            "motorsazanClient.netExpert.handleFilterFormStatusComboSelectedIndexChange";

    }).BindList(Model).GetHtml()
