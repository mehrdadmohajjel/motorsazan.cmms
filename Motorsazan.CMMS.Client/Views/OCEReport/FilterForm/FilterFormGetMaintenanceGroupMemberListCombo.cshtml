    settings =>
    {
        settings.Name = "filterFormGetMaintenanceGroupMemberListCombo";
        settings.CallbackRouteValues = new {Controller = "OCEReport", Action = "FilterFormGetMaintenanceGroupMemberList"};

        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "شخص مورد نظر را انتخاب کنید";

        settings.SelectedIndex = -1;
