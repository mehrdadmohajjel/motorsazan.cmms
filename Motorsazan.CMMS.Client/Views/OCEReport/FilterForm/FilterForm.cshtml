<div class="filter-form">
    <div class="row ">

        <div class="col-xs-12 col-md-3" id="filterFormGetMaintenanceGroupListComboParentDesign">
            <div class="app__form-item">
                <label class="app__form-label">
                    گروه تعمیراتی
                </label>
                <div id="filterFormGetMaintenanceGroupListComboParent">
                    @{ Html.RenderAction("FilterFormGetMaintenanceGroupList", "OCEReport"); }
                </div>
                <div class="app__form-error app__hide"
                     id="filterFormGetMaintenanceGroupListComboError">
                    گروه تعمیراتی انتخاب نشده است
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-3" id="filterFormGetMaintenanceGroupMemberListComboParentDesign">
            <div class="app__form-item">
                <label class="app__form-label">
                    پرسنل نت
                </label>
                <div id="filterFormGetMaintenanceGroupMemberListComboParent">
                    @{ Html.RenderPartial("~/Views/OCEReport/FilterForm/FilterFormGetMaintenanceGroupMemberListCombo.cshtml"); }
                </div>
                <div class="app__form-error app__hide"
                     id="filterFormGetMaintenanceGroupMemberListComboError">
                    پرسنل نت انتخاب نشده است
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-3" id="filterFormDateTypeComboParentDesign">
            <div class="app__form-item">
                <label class="app__form-label">
                    بازه زمانی
                </label>
                <div id="filterFormDateTypeComboParent">
                    @{ Html.RenderPartial("~/Views/OCEReport/FilterForm/FilterFormDateTypeCombo.cshtml"); }
                </div>
                <div class="app__form-error app__hide"
                     id="filterFormDateTypeComboError">
                    بازه زمانی انتخاب نشده است
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-6 app__hide" id="filterFormSpecialDateColumn">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            از تاریخ
                        </label>
                        <input type="text" class="app__form-datepicker"
                               id="filterFormStartDate"
                               placeholder="تاریخ را انتخاب نمایید"
                               data-mddatetimepicker="true"
                               data-englishnumber="true"
                               data-targetdateselector="#filterFormStartDate"/>
                        <div class="app__form-error app__hide"
                             id="filterFormStartDateError">
                            تاریخ شروع انتخاب نشده است
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            تا تاریخ
                        </label>
                        <input type="text" class="app__form-datepicker"
                               id="filterFormEndDate"
                               placeholder="تاریخ را انتخاب نمایید"
                               data-mddatetimepicker="true"
                               data-englishnumber="true"
                               data-targetdateselector="#filterFormEndDate"/>
                        <div class="app__form-error app__hide"
                             id="filterFormEndDateError">
                            تاریخ پایان انتخاب نشده است
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-5 col-md-2 pull-left filter-form__action-wrapper">
            @Html.DevExpress().Button(settings =>
            {
                settings.Name = "filterFormSearchBtn";
                settings.Text = "مشاهده";
                settings.UseSubmitBehavior = false;
                settings.EnableClientSideAPI = true;
                settings.Styles.CssPostfix = "filter-form__btn";
                settings.Width = Unit.Percentage(100);
                settings.ClientSideEvents.Click =
                    "motorsazanClient.oCEReport.handleFilterFormSearchBtnClick";
            }).GetHtml()
        </div>
    </div>
</div>