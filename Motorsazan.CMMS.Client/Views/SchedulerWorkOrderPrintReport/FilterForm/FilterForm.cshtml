<div class="filter-form ">

    <div class="row">
        <div class="col-xs-12 col-md-2" id="filterFormWorkOrderTypeComboParent">
            <div class="app__form-item">
                <label class="app__form-label">
                    انتخاب نوع سفارشکار
                </label>
                @{ Html.RenderPartial("~/Views/SchedulerWorkOrderPrintReport/FilterForm/FilterFormWorkOrderTypeCombo.cshtml"); }
                <div class="app__form-error app__hide"
                     id="filterFormWorkOrderTypeComboError">
                    نوع سفارشکار انتخاب نشده است
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-3">
            <div class="app__form-item">
                <label class="app__form-label">
                    انتخاب وضعیت
                </label>
                <div id="filterFormWorkOrderStatusComboParent">
                    @{ Html.RenderAction("FilterFormWorkOrderStatus", "SchedulerWorkOrderPrintReport");}
                </div>
                <div class="app__form-error app__hide" id="filterFormWorkOrderStatusError">
                    وضعیت انتخاب نشده است
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-2" id="filterFormDateComboDesign">
            <div class="app__form-item">
                <label class="app__form-label">
                    بازه زمانی
                </label>
                <div id="filterFormDateComboParent">
                    @{ Html.RenderPartial("~/Views/SchedulerWorkOrderPrintReport/FilterForm/FilterFormDateCombo.cshtml");}
                </div>
                <div class="app__form-error app__hide" id="filterFormDateComboError">
                    بازه زمانی انتخاب نشده است
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-2 " id="filterFormPeriodStartDatePickerParent">
            <div class="app__form-item">
                <label class="app__form-label">
                    از تاریخ
                </label>
                <div>
                    <input type="text" class="app__form-datepicker"
                           id="filterFormPeriodStartDatePicker"
                           placeholder="از تاریخ"
                           data-mddatetimepicker="true"
                           data-englishnumber="true"
                           data-targetdateselector="#filterFormPeriodStartDatePicker" />
                </div>
                <div class="app__form-error app__hide" id="filterFormPeriodStartDatePickerError">
                    شروع بازه زمانی انتخاب نشده است
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-2" id="filterFormPeriodEndDatePickerParent">
            <div class="app__form-item">
                <label class="app__form-label">
                    تا تاریخ
                </label>
                <div>
                    <input type="text" class="app__form-datepicker"
                           id="filterFormPeriodEndDatePicker"
                           placeholder="تا تاریخ"
                           data-mddatetimepicker="true"
                           data-englishnumber="true"
                           data-targetdateselector="#filterFormPeriodEndDatePicker" />
                </div>
                <div class="app__form-error app__hide" id="filterFormPeriodEndDatePickerError">
                    پایان بازه زمانی انتخاب نشده است
                </div>
            </div>
        </div>

        <div class="col-xs-5 col-md-1 filter-form__action-wrapper">
            @Html.DevExpress().Button(settings =>
            {
                settings.Name = "filterFormSearchBtn";
                settings.Text = "مشاهده";
                settings.UseSubmitBehavior = false;
                settings.EnableClientSideAPI = true;
                settings.Styles.CssPostfix = "filter-form__btn";
                settings.Width = Unit.Percentage(100);
                settings.ClientSideEvents.Click =
                    "motorsazanClient.schedulerWorkOrderPrintReport.handleFilterFormSearchButtonClick";
            }).GetHtml()
        </div>
    </div>

</div>