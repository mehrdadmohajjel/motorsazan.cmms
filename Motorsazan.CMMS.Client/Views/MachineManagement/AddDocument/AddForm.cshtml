<section class="app__section">
    <div id="addFormMachineDocumentDesign" class="app__section__body">

        <div class="row">
            <div class="col-xs-12 col-md-6 col-lg-6">
                <div class="app__form-item" id="addMachineDocumentTreeDesign">
                    <label class="app__form-label">
                        انتخاب دستگاه
                    </label>
                    <div id="addMachineDocumentTreeParent">
                        @{
                            var machineId = (long)ViewData["MachineTopParentId"];
                            Html.RenderAction("AddMachineDocumentTreeList", "MachineManagement", new { MachineTopParentId = machineId });

                        }
                    </div>
                    <div class="app__form-error app__hide" id="addMachineDocumentTreeError">
                        نام دستگاه وارد نشده است
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-6 col-lg-6 pull-left">
                <div class="col-xs-12 col-md-12 col-lg-12">
                    <div class="app__form-item" id="addDocumentTypeListComboParent">
                        <label class="app__form-label">
                            نوع فایل ضمیمه
                        </label>
                        <div>
                            @Html.Action("AddDocumentTypeListComboPartial", "MachineManagement")
                        </div>
                        <div class="app__form-error app__hide" id="addDocumentTypeListComboError">
                            نوع فایل ضمیمه انتخاب نشده است
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-md-12">
                    <div class="app__form-item" id="machineAttachmentUploaderParent">
                        <label class="app__form-label">
                            فایل ضمیمه
                        </label>
                        <div id="machineAttachmentUploader"></div>
                        <div class="app__form-error app__hide" id="machineAttachmentUploaderError">
                            فایل ضمیمه انتخاب نشده است
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-md-4 col-lg-3 filter-form__action-wrapper pull-left">
                @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "addDocumentSaveBtn";
                    settings.Text = "ثبت";
                    settings.UseSubmitBehavior = false;
                    settings.EnableClientSideAPI = true;
                    settings.Styles.CssPostfix = "add-form__btn";
                    settings.Width = Unit.Percentage(100);
                    settings.ClientSideEvents.Click =
                        "motorsazanClient.machineManagement.handleAddSubMachineDocumentSaveBtnClick";
                }).GetHtml()
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3 filter-form__action-wrapper">
            <div class="app__section__body">
                <form class="app__grid-wrapper" id="machineDocumentGridParent">
                    @{ Html.RenderPartial("~/Views/MachineManagement/AddDocument/MachineDocumentGrid.cshtml"); }
                </form>
            </div>
        </div>
    </div>

</section>
