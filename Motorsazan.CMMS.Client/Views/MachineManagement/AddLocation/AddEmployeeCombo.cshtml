
@model Motorsazan.CMMS.Shared.Models.Output.MachineManagement.OutputGetEmployeeListOfDepartment[]


@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "addFormEmployeeCombo";
        settings.CallbackRouteValues = new { Controller = "MachineManagement", Action = "AddEmployeeCombo" };

        settings.Properties.ClientSideEvents.BeginCallback =
            "motorsazanClient.machineManagement.handleAddFormEmployeeComboBeginCallback";

        settings.Properties.DisplayFormatInEditMode = true;

        settings.Width = Unit.Percentage(100);

        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "نفر را انتخاب نمایید";
        settings.SelectedIndex = -1;
        settings.Properties.CallbackPageSize = 100;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.IncrementalFilteringDelay = 200;
        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";

        settings.Properties.ValueField = "Id";
        settings.Properties.ValueType = typeof(long);
        settings.Properties.TextFormatString = "{0} {1} {2}";

        settings.Properties.Columns.Add("EId", "کد پرسنلی", Unit.Percentage(20));
        settings.Properties.Columns.Add("FName", "نام", Unit.Percentage(40));
        settings.Properties.Columns.Add("LName", "نام خانوادگی", Unit.Percentage(40));

        settings.Properties.ItemStyle.Wrap = DefaultBoolean.True;

        settings.Properties.ClientSideEvents.SelectedIndexChanged =
            "motorsazanClient.machineManagement.handleAddFormEmployeeComboSelectedIndexChanged";
    }).BindList(Model).GetHtml()


