@model Motorsazan.CMMS.Shared.Models.Output.CostReportByDepartment.OutputGetDepartmentList[]

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "filterFormDepartmentListCombo";
        settings.CallbackRouteValues = new {Controller = "AllWorkOrderStatusReport", Action = "FilterFormGetDepartmentListCombo"};
        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "نام امور را وارد کنید";
        settings.SelectedIndex = -1;
        settings.Properties.CallbackPageSize = 100;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.IncrementalFilteringDelay = 200;
        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";

        settings.Properties.ValueField = "DepartmentId";
        settings.Properties.ValueType = typeof(int);
        settings.Properties.Columns.Add("ShowName", "عنوان دپارتمان");

        settings.Properties.TextField = "ShowName";

        settings.Properties.ClientSideEvents.SelectedIndexChanged =
            "motorsazanClient.allworkorderstatusreport.handleFilterFormDepartmentListComboSelectedIndexChange";
    }).BindList(Model).GetHtml()