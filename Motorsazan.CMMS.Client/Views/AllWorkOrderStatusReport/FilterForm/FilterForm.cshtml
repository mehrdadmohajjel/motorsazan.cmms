<div class="filter-form">
    <div class="row ">
        <div class="col-xs-12 col-md-3" id="filterFormMaintenanceGroupTypeComboParent">
            <div class="app__form-item">
                <label class="app__form-label">
                    انتخاب نوع گروه تعمیراتی
                </label>
                @{ Html.RenderPartial("~/Views/AllWorkOrderStatusReport/FilterForm/FilterFormMaintenanceGroupTypeCombo.cshtml"); }
                <div class="app__form-error app__hide"
                     id="filterFormMaintenanceGroupTypeComboError">
                    نوع گروه تعمیراتی انتخاب نشده است
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-3" id="filterFormWorkOrderTypeComboParent">
            <div class="app__form-item">
                <label class="app__form-label">
                    انتخاب نوع سفارشکار
                </label>
                @{ Html.RenderPartial("~/Views/AllWorkOrderStatusReport/FilterForm/FilterFormWorkOrderTypeCombo.cshtml"); }
                <div class="app__form-error app__hide"
                     id="filterFormWorkOrderTypeComboError">
                    نوع سفارشکار انتخاب نشده است
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-3" id="filterFormStopTypeComboParent">
            <div class="app__form-item">
                <label class="app__form-label">
                    انتخاب نوع توقف
                </label>
                @{ Html.RenderAction("GetStopTypeList", "AllWorkOrderStatusReport"); }
                <div class="app__form-error app__hide"
                     id="filterFormStopTypeComboError">
                    نوع توقف انتخاب نشده است
                </div>
            </div>
        </div>

    </div>

    <div class="row ">

        <div class="col-xs-12 col-md-3">
            <div class="app__form-item">
                <label class="app__form-label">
                    انتخاب گروه تعمیراتی
                </label>
                <div id="filterFormMaintenanceGroupComboParent">
                    @{ Html.RenderAction("FilterFormMaintenanceGroupCombo", "AllWorkOrderStatusReport"); }
                </div>
                <div class="app__form-error app__hide" id="filterFormMaintenanceGroupComboError">
                    گروه تعمیراتی انتخاب نشده است
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-3">
            <div class="app__form-item">
                <label class="app__form-label">
                    انتخاب وضعیت سفارشکار
                </label>
                <div id="filterFormWorkOrderStatusTypeComboParent">
                    @{ Html.RenderAction("FilterFormGetWorkOrderAllStatusList", "AllWorkOrderStatusReport"); }
                </div>
                <div class="app__form-error app__hide" id="filterFormWorkOrderStatusTypeComboError">
                    وضعیت سفارشکار انتخاب نشده است
                </div>
            </div>
        </div>


        <div class="col-xs-12 col-md-3">
            <div class="app__form-item">
                <label class="app__form-label">
                    امور صادرکننده برگ
                </label>
                <div id="filterFormDepartmentListComboParent">
                    @{ Html.RenderAction("FilterFormGetDepartmentListCombo", "AllWorkOrderStatusReport"); }
                </div>
                <div class="app__form-error app__hide" id="filterFormDepartmentListComboError">
                    امور انتخاب نشده است
                </div>
            </div>
        </div>

    </div>

    <div class="row ">
        <div class="col-xs-12 col-md-4" id="filterFormDateTypeComboParent">
            <div class="app__form-item">
                <label class="app__form-label">
                    بازه زمانی
                </label>
                @{ Html.RenderPartial("~/Views/AllWorkOrderStatusReport/FilterForm/FilterFormDateTypeCombo.cshtml"); }
                <div class="app__form-error app__hide"
                     id="filterFormDateTypeComboError">
                    بازه زمانی انتخاب نشده است
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-4 app__hide" id="filterFormSpecialDateColumn">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            از تاریخ
                        </label>
                        <input type="text" class="app__form-datepicker"
                               id="filterFormStartDate"
                               placeholder="تاریخ را انتخاب نمایید"
                               data-mddatetimepicker="true"
                               data-englishnumber="true"
                               data-targetdateselector="#filterFormStartDate"/>
                        <div class="app__form-error app__hide"
                             id="filterFormStartDateError">
                            تاریخ شروع انتخاب نشده است
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6">
                    <div class="app__form-item">
                        <label class="app__form-label">
                            تا تاریخ
                        </label>
                        <input type="text" class="app__form-datepicker"
                               id="filterFormEndDate"
                               placeholder="تاریخ را انتخاب نمایید"
                               data-mddatetimepicker="true"
                               data-englishnumber="true"
                               data-targetdateselector="#filterFormEndDate"/>
                        <div class="app__form-error app__hide"
                             id="filterFormEndDateError">
                            تاریخ پایان انتخاب نشده است
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-5 col-md-2 pull-left filter-form__action-wrapper">
            @Html.DevExpress().Button(settings =>
            {
                settings.Name = "filterFormSearchBtn";
                settings.Text = "مشاهده";
                settings.UseSubmitBehavior = false;
                settings.EnableClientSideAPI = true;
                settings.Styles.CssPostfix = "filter-form__btn";
                settings.Width = Unit.Percentage(100);
                settings.ClientSideEvents.Click =
                    "motorsazanClient.allworkorderstatusreport.handleFilterFormSearchBtnClick";
            }).GetHtml()
        </div>
    </div>
</div>