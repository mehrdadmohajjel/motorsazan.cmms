@model Motorsazan.CMMS.Shared.Models.Output.ProductiveWorkOrder.OutputGetStopTypeList[]

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "filterFormStopTypeCombo";
        settings.CallbackRouteValues = new {Controller = "AllWorkOrderStatusReport", Action = "GetStopTypeList"};
        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "نوع توقف را انتخاب نمایید";
        settings.SelectedIndex = 0;
        settings.Properties.CallbackPageSize = 100;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.IncrementalFilteringDelay = 200;
        settings.Properties.DropDownWidth = Unit.Pixel(400);
        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";
        settings.SelectedIndex = -1;

        settings.Properties.ValueField = "StopTypeID";
        settings.Properties.ValueType = typeof(long);
        settings.Properties.TextField = "StopTypeTitle";
        settings.Properties.Columns.Add("StopTypeTitle", "عنوان نوع توقف");

        settings.Properties.ClientSideEvents.SelectedIndexChanged =
            "motorsazanClient.allworkorderstatusreport.handleFilterFormStopTypeComboIndexChange";
    }).BindList(Model).GetHtml()