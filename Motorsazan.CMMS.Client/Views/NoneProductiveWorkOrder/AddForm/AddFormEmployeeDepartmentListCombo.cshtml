
@model Motorsazan.CMMS.Shared.Models.Output.ProductiveWorkOrder.OutputGetCurrentUserDepartmentList[]
@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "addFormEmployeeDepartmentCombo";
        settings.CallbackRouteValues = new { Controller = "NoneProductiveWorkOrder", Action = "GetEmployeeDepartmentList" };
        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "خط را انتخاب نمایید";
        settings.SelectedIndex = 0;
        settings.Properties.CallbackPageSize = 100;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.IncrementalFilteringDelay = 200;
        settings.Properties.DropDownWidth = Unit.Pixel(400);
        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";
        settings.SelectedIndex = -1;

        settings.Properties.ValueField = "DepartmentId";
        settings.Properties.ValueType = typeof(int);
        settings.Properties.Columns.Add("DepartmentName", "عنوان گروه");
        settings.Properties.Columns.Add("UnitCode", "کد");
        settings.Properties.ClientSideEvents.SelectedIndexChanged =
    "motorsazanClient.noneProductiveWorkOrder.employeeDepartmentComboChanged";


    }).BindList(Model).GetHtml()
