@model Motorsazan.CMMS.Shared.Models.Output.MachineConsumeStockReport.OutputGetStockFromHavaleWorkOrderReferral[]

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "filterFormGetStockFromHavaleWorkOrderReferralCombo";
        settings.CallbackRouteValues = new { Controller = "MachineConsumeStockReport", Action = "FilterFormGetStockFromHavaleWorkOrderReferral" };

        settings.Properties.ClientSideEvents.BeginCallback =
            "motorsazanClient.machineConsumeStockReport.handleGetStockFromHavaleWorkOrderReferralBeginCallback";

        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "قطعه را انتخاب کنید";
