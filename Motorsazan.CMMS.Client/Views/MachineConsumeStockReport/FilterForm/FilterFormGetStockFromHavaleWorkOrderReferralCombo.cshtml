        settings.Properties.DropDownStyle = DropDownStyle.DropDown;

        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";

        settings.Properties.ValueField = "StockId";
        settings.Properties.ValueType = typeof(long);

        settings.Properties.TextField = "StockName";
        settings.Properties.Columns.Add("StockName", "عنوان ").Width = Unit.Percentage(60);
        settings.Properties.Columns.Add("RackCode", "آدرس در انبار").Width = Unit.Percentage(30);
        settings.Properties.Columns.Add("TechNO", "شماره فنی").Width = Unit.Percentage(30);


        settings.Properties.ClientSideEvents.SelectedIndexChanged =
            "motorsazanClient.machineConsumeStockReport.handleFilterFormGetStockFromHavaleWorkOrderReferralSelectedIndexChange";
    }).BindList(Model).GetHtml()