@model Motorsazan.CMMS.Shared.Models.Output.ItemOperationReport.OutputGetOperationItemTypeList[]

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "filterFormItemTypeCombo";
        settings.CallbackRouteValues = new { Controller = "ItemOperationReport", Action = "FilterFormItemTypeCombo" };
        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "نوع ایتم را وارد کنید";
        settings.SelectedIndex = -1;
        settings.Properties.CallbackPageSize = 100;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.IncrementalFilteringDelay = 200;
        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";

        settings.Properties.ValueField = "OperationItemTypeId";
        settings.Properties.ValueType = typeof(int);

        settings.Properties.TextField = "OperationItemTypeShowName";
        settings.ClientEnabled = false;
        settings.Properties.ClientSideEvents.SelectedIndexChanged =
            "motorsazanClient.itemOperationReport.handleFilterFormItemTypeComboSelectedIndexChange";


    }).BindList(Model).GetHtml()
