@model Motorsazan.CMMS.Shared.Models.Output.ProductiveWorkOrder.OutputGetMaintenanceGroupList[]

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "filterFormMaintenanceGroupCombo";
        settings.CallbackRouteValues = new {Controller = "MaintenanceGroupMttrAndMtbfReport", Action = "FilterFormMaintenanceGroupIdCombo"};
        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "نام گروه تعمیراتی وارد نشده است";
        settings.SelectedIndex = -1;
        settings.Properties.CallbackPageSize = 100;
