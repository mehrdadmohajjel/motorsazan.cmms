@model Motorsazan.CMMS.Shared.Models.Output.Inspection.OutputGetMainDepartmentListHasMachine[]

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "filterFormDepartmentIdCombo";
        settings.CallbackRouteValues = new {Controller = "MainMachineOilServiceReport", Action = "FilterFormDepartmentIdCombo"};

        settings.Properties.ClientSideEvents.BeginCallback =
            "motorsazanClient.mainMachineOilServiceReport.handleFilterFormDepartmentIdComboBeginCallback";

        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "نام امور را وارد کنید";
